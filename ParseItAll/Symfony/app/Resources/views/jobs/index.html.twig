{% extends 'base.html.twig' %}

{% block body %}
    <h1>Jobs list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Caption</th>
                <th>Zerolink</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for job in jobs %}
            <tr>
                <td><a href="{{ path('jobs_show', { 'id': job.id }) }}">{{ job.id }}</a></td>
                <td>{{ job.caption }}</td>
                <td>{{ job.zeroLink }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('jobs_show', { 'id': job.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('jobs_edit', { 'id': job.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('jobs_new') }}">Create a new job</a>
        </li>
    </ul>
{% endblock %}
